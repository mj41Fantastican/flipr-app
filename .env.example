# Flipr Environment Variables

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_project_id_here

# Contract Address (update after deployment)
NEXT_PUBLIC_FLIPR_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Treasury Wallet Address
NEXT_PUBLIC_TREASURY_ADDRESS=0x50ef686123d82e0a37bc62abcbdf1526fde85de6

# Base RPC URL (optional - uses public by default)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org

# App URL (for Farcaster Frames)
NEXT_PUBLIC_URL=https://yourdomain.com

# IPFS/Pinata API (for NFT metadata upload)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_key

# Optional: Alchemy API for better RPC
NEXT_PUBLIC_ALCHEMY_ID=your_alchemy_api_key
